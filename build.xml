<project name="TPCW" default="compile" basedir=".">

    <!-- EDIT THE FOLLOWING TWO PARAMETERS ACCORDING TO YOUR SYSTEM -->
    <property environment="env"/>


    <!-- set properties for this build -->
    <property name="base.dir" value="."/>
    <property name="src.dir" value="${base.dir}/src"/>
    <property name="dist.dir" value="${base.dir}/dist"/>
    <property name="libs.dir" value="${base.dir}/libs"/>
    <property name="classes.dir" value="${dist.dir}/classes"/>


    <!-- PATHS DEFINITIONS -->
    <path id="build.path">
        <pathelement location="${libs.dir}/jsqlparser.jar"/>
        <pathelement location="${libs.dir}/mysql-connector-java-5.1.17-bin.jar"/>
        <pathelement location="${libs.dir}/javaparser-1.0.8.jar"/>
        <pathelement location="${libs.dir}/netty-3.2.1.Final.jar"/>
    </path>

    <target name="init" depends="clean">
        <tstamp/>
        <mkdir dir="${dist.dir}"/>
        <mkdir dir="${classes.dir}"/>
    </target>

    <target name="clean" description="Clean disttribution directory">
        <delete dir="${dist.dir}"/>
    </target>

    <target name="compile" depends="init" description="Compile source code">
        <javac srcdir="${src.dir}/" destdir="${classes.dir}" source="1.7" target="1.7" includeantruntime="false">
            <classpath refid="build.path"/>
        </javac>
    </target>
</project>

