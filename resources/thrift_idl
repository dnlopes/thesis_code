namespace java util.thrift

struct ApplyDelta
{
    1: required string constraintId;
    2: required string deltaValue;
    3: required string rowId;
    4: required bool mustCoordinate;
}

struct RequestValue
{
    1: required string constraintId;
    2: required i32 opId;
    3: required string fieldName;
    4: string requestedValue;
    5: string tempSymbol;
}

struct UniqueValue
{
    1: required string constraintId;
    2: required string value;
}

struct CoordinatorResponse
{
    1: required bool success;
    2: list<RequestValue> requestedValues;
    3: string errorMessage;
}

struct CoordinatorRequest
{
    1: required i32 requestId;
    2: list<RequestValue> requests;
    3: list<UniqueValue> uniqueValues;
    4: list<ApplyDelta> deltaValues;
}

struct ThriftOperation {
    1: required i32 txnId;
    2: required map<i32, string> operations;
    3: string clock
    4: required i32 replicatorId;
}

struct ThriftShadowTransaction {
    1: required i32 txnId;
    2: required map<i32,string> operations;
    3: Request requestToCoordinator;
    4: map<i32,string> tempOperations;
    5: string clock
    6: i32 replicatorId;
}

union RequestUnit {
    1:UniqueValue uniqueValue;
    2:ApplyDelta applyDelta;
    3:RequestValue requestValue;
}

struct Request {
    1:bool requiresCoordination;
    2:list<RequestUnit> requests;
}

service ReplicatorRPC {
 bool commitOperation(1:ThriftShadowTransaction op);
 oneway void commitOperationAsync(1:ThriftShadowTransaction op);
}


service CoordinatorRPC
{
    CoordinatorResponse checkInvariants(1:Request request);
}